  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Django",
      "type": "debugpy",
      "request": "launch",
      "args": ["runserver", "0.0.0.0:8000"],
      "django": true,
      "autoStartBrowser": false,
      "justMyCode": false,
      "python": "${command:python.interpreterPath}",
      "program": "${workspaceFolder}/manage.py",
      "console": "integratedTerminal"
    }
  ]
}
