{
  "name": "todo-backend",
  "version": "0.0.1",
  "description": "ToDo backend application",
  "main": "src/index.js",
  "scripts": {
    "build": "tsc --removeComments",
    "compile": "tsc && node -r dotenv/config dist/index.js",
    "dev": "nodemon -e ts --exec \"npm run compile\"",
    "typeorm": "ts-node --require module-alias/register ./node_modules/typeorm/cli -f ./src/core/db/options.ts",
    "migrate": "npm run typeorm -- migration:run",
    "revertsmigrate": "npm run typeorm -- migration:revert",
    "showmigrations": "npm run typeorm -- migration:show",
    "makemigrations": "npm run typeorm -- migration:generate -n data",
    "createmigration": "npm run typeorm -- migration:create -n"
  },
  "keywords": [
    "todo",
    "test",
    "server",
    "backend"
  ],
  "author": "fabalcu97",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.6",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.14",
    "apollo-server-express": "^2.15.0",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.2.0",
    "http-status-codes": "^1.4.0",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "pg": "^8.2.1",
    "pm2": "^4.4.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^8.10.2",
    "type-graphql": "^1.0.0-rc.3",
    "typeorm": "^0.2.25",
    "vesper": "^0.1.9"
  },
  "devDependencies": {
    "@divyenduz/ts-graphql-plugin": "^0.1.0",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "^7.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "typescript": "^3.9.5"
  },
  "_moduleAliases": {
    "@decorators": "dist/core/decorators",
    "@interfaces": "dist/core/interfaces",
    "@baseClasses": "dist/core/classes",
    "@db": "dist/core/db",
    "@graphql": "dist/core/graphql",
    "@models": "dist/server/models"
  }
}
