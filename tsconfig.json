{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "paths": {
      "@decorators": [
        "core/decorators/index.ts"
      ],
      "@interfaces": [
        "core/interfaces/index.ts"
      ],
      "@baseClasses": [
        "core/classes/index.ts"
      ],
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}